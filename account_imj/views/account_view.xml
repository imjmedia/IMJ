<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Remove button to post the move if journal bool is true-->
        <record id="account_hide_post_button" model="ir.ui.view">
            <field name="name">account.hide.post.button</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_post']" position="replace">
                    <button name="action_post" string="Post" class="oe_highlight" type="object" groups="account.group_account_invoice" attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('no_publicable','=',True)]}"/>
                </xpath>
				<xpath expr="//field[@name='inalterable_hash']" position="after">
                    <field name="no_publicable" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='invoice_user_id']" position="replace">
                    <field name="invoice_user_id" domain="[('es_vendedor', '=', True)]"/>
                </xpath>
            </field>
        </record>

        <!-- Agrega si la factura es pue o ppd-->
        <record id="account_move_payment_policy" model="ir.ui.view">
            <field name="name">account.move.payment.policy</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="l10n_mx_edi.view_l10n_mx_edi_invoice_form_inherit"/>
            <field name="arch" type="xml">
				<xpath expr="//field[@name='l10n_mx_edi_usage']" position="after">
                    <field name="l10n_mx_edi_payment_policy" attrs="{'readonly':[('l10n_mx_edi_pac_status', '=', 'signed')], 'invisible': [('type', 'not in', ('out_invoice', 'out_refund'))]}"/>
                </xpath>
            </field>
        </record>
        
        <record id="account_journal_nopublicable_view" model="ir.ui.view">
            <field name="name">account.journal.nopublicable.view</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="no_publicable" />
                </xpath>
            </field>
        </record>

        <record id="account_payment_edit_uuid_view" model="ir.ui.view">
            <field name="name">account.payment.edit.uuid.view</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="l10n_mx_edi.view_account_payment_form_inh_l10n_mx"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='l10n_mx_edi_cfdi_uuid']" position="replace">
                    <field name="l10n_mx_edi_cfdi_uuid" states="posted,sent,reconciled,cancelled" attrs="{'invisible':[('payment_type', '=', 'outbound')]}"/>
                    <field name="aux_mx_edi_cfdi_uuid" states="posted,sent,reconciled,cancelled" attrs="{'invisible':[('payment_type', '=', 'intbound')]}"/>
                </xpath>
            </field>
        </record>
	</data>
</odoo>